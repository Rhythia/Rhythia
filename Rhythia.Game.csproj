<Project Sdk="Godot.NET.Sdk/4.2.0">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <DefaultItemExcludes>$(DefaultItemExcludes);templates\**</DefaultItemExcludes>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="Rhythia.Core">
      <HintPath>..\server\Rhythia.Core\bin\Debug\net7.0\Rhythia.Core.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <DiscordBinFiles Include="discord\bin\x86_64\*.*" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="online\" />
  </ItemGroup>
  <Target Name="CopyDiscord" AfterTargets="AfterBuild">
    <Copy SourceFiles="@(DiscordBinFiles)" DestinationFolder="$(OutDir)" />
  </Target>
  <Target Name="CopyDiscordPublish" AfterTargets="Publish">
    <Copy SourceFiles="discord\bin\x86_64\discord_game_sdk.dll" DestinationFolder="$(PublishDir)" Condition="$([MSBuild]::IsOSPlatform('Windows'))" />
    <Copy SourceFiles="discord\bin\x86_64\libdiscord_game_sdk.so" DestinationFolder="$(PublishDir)" Condition="$([MSBuild]::IsOSPlatform('Linux'))" />
  </Target>
</Project>